# ------------------------------------------------------------------------------------------------
# SUPABASE CONFIGURATION
# ------------------------------------------------------------------------------------------------

# DATABASE
POSTGRES_PASSWORD=your-super-secret-and-long-postgres-password
POSTGRES_PORT=5432
POSTGRES_DB=postgres

# API GATEWAY (KONG)
KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443

# DASHBOARD (STUDIO)
STUDIO_PORT=3000

# API KEYS (YOU MUST GENERATE THESE)
# Use the tool at https://supabase.com/docs/guides/self-hosting/docker#generate-api-keys
# Or a JWT generator with your JWT_SECRET
ANON_KEY=your-anon-key-token
SERVICE_ROLE_KEY=your-service-role-key-token

# AUTHENTICATION
# Generate a secure random string (e.g., `openssl rand -hex 32`)
JWT_SECRET=your-super-secret-jwt-token-at-least-32-chars-long
JWT_EXP=3600
SITE_URL=http://localhost:3000
ADDITIONAL_REDIRECT_URLS=
API_EXTERNAL_URL=http://localhost:8000

# EMAIL (SMTP) - Optional for local dev, required for prod
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=true
SMTP_ADMIN_EMAIL=admin@example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-smtp-password
SMTP_SENDER_NAME=PharmGPT-Admin
MAILER_URLPATHS_INVITE=/auth/v1/verify
MAILER_URLPATHS_CONFIRMATION=/auth/v1/verify
MAILER_URLPATHS_RECOVERY=/auth/v1/verify
MAILER_URLPATHS_EMAIL_CHANGE=/auth/v1/verify

# STORAGE
FILE_SIZE_LIMIT=52428800

# LOGGING
LOGFLARE_API_KEY=your-logflare-api-key

# ------------------------------------------------------------------------------------------------
# BACKEND APPLICATION CONFIGURATION
# ------------------------------------------------------------------------------------------------

# AI PROVIDERS
OPENAI_API_KEY=sk-...
MISTRAL_API_KEY=...

# REALTIME
REALTIME_DB_ENC_KEY=your-realtime-db-enc-key
REALTIME_SECRET_KEY_BASE=your-realtime-secret-key-base

# OTHERS
PGRST_DB_SCHEMAS=public,storage,graphql_public
SUPABASE_PUBLIC_URL=http://localhost:8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
